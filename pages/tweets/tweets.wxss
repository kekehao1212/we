/* pages/message/message.wxss */
page {
  background-color: #e8e8e7;
}
.tweet-container {
  width: 100%;
}
.test {
  width: 50px;
  overflow: hidden;
}
.publish-btn {
  z-index: 2;
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  border-radius: 50%;
}
.publish-image {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  box-shadow: 0px 3px 3px #888888;
  background-color: #ffffff;
}
.comment-btn {
  position:absolute;
  top:0;
  z-index:1;
  right:10rpx;
  color:#017bf9;
  bottom:0;
  display:flex;
  align-items:center;
  margin:0;
  padding:0;
  font-size:14px;
  background-color:transparent;
  border-radius:0;
}
.input-container {
  position: relative;
}
.switch{
  font-size: 14px;
}
.view-comment-container {
  display: flex;
  align-items:center;
  flex-direction: column;
  text-align: center;
  margin-bottom: 20rpx;
}
.arrowDown-image {
  width: 30rpx;
  height: 30rpx;
}
.view-comment {
  color:#b1b9c2;
  font-size: 12px;
}
.touch-comment{
  width: 200rpx;
}
.comments-container {
  font-size: 12px;
}
.comment{
  display: flex;
  margin: 10rpx 5rpx; 
}
.comment-username{
  color: #335691;
}
.rotate-arrowDown {
  transform: rotate(180deg);
}